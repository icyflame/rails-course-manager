<h1>List of all courses</h1>

<table class="table">

	<tr>

		<th>ID</th>
		<th>Code</th>
		<th>Name</th>
		<th>Department</th>
		<th></th>
		<th></th>

	</tr>

	<% @courses.each do |course| %>

	<tr>

		<td> <%= course.id %> </td>
		<td> <%= course.code %> </td>
		<td> <%= course.name %> </td>
		<td> <%= course.dept %> </td>
		<td> <%= link_to 'Show', course %> </td>
		<td>
			<%= form_for :course, url: course, method: :delete do |f| %>
			<input type="submit"/>
			<% end %>
		</td>

	</tr>

	<% end %>

</table>


<%= link_to 'New Course', new_course_path %>
