<h1>List of all courses</h1>

<table class="table">

	<tr>

		<th>ID</th>
		<th>Code</th>
		<th>Name</th>
		<th>Department</th>
		<th></th>
		<th></th>

	</tr>

	<% @courses.each do |course| %>

	<tr>

		<td> <%= course.id %> </td>
		<td> <%= course.code %> </td>
		<td> <%= course.name %> </td>
		<td> <%= course.dept %> </td>
		<td> 
			<a href="<%= course_path(course) %>">
				<button class="btn btn-success">
					Show
				</button>
			</a>

		</td>
		<td>
			<%= form_for :course, url: course, method: :delete do |f| %>
			<input class="btn btn-danger" type="submit" value="delete"/>
			<% end %>
		</td>

	</tr>

	<% end %>

</table>

<a href="<%= new_course_path %>">
	<button class="btn btn-primary">
		New Course
	</button>
</a>

