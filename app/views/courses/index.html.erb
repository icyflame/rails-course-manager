<h1>List of all courses</h1>

<table class="table">

	<tr>

		<th>ID</th>
		<th>Code</th>
		<th>Name</th>
		<th>Department</th>

	</tr>

	<% @courses.each do |course| %>

	<tr>

		<td> <%= course.id %> </td>
		<td> <%= course.code %> </td>
		<td> <%= course.name %> </td>
		<td> <%= course.dept %> </td>

	</tr>

	<% end %>

</table>


<%= link_to 'New Course', new_course_path %>
